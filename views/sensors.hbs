<div class="grass">
<h1 class="center-align">Sensors</h1>
<div class="row">
{{#if detector.length}}
{{#each detector}}
    <div class="col s12 m6">
      <div class="card blue-grey darken-1 hoverable">
        <div class="card-content white-text">
          <span class="card-title location">{{location}}</span>
        </div>
        <div class="card-action cardFlex">
              <a href="/sensors/{{id}}" target="__blank" >Открыть</a>
              <a href="/sensors/edit/{{id}}?allow=true" >Редактировать</a>
              <form action="/delete" method="POST" onSubmit="if(confirm('Are you sure?')) {this.submit;} else {return false;}" class="formCard">
              <input type="hidden" name="id" value="{{id}}">
              <button type="submit" class="btn btn-primary">Удалить</button>
              <input type="hidden" name="_csrf" value="{{@root.csrf}}">
            </form>
        </div>
      </div>
    </div>
{{/each}}
  </div>
{{else}}
<p>Датчики отсутствуют</p>
{{/if}}
</div>